<UserControl x:Class="Employee_Resources_Manage.QRCode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Employee_Resources_Manage"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500">
    <Grid>
        <Button Name="streamQRCode" Grid.Row="1" Style="{StaticResource MaterialDesignFlatButton}" Width="120" Click="StreamQRCode_Click" HorizontalAlignment="Center" VerticalAlignment="Top">Scan QR Code</Button>
        <!--<WindowsFormsHost Height="400" Width="400" HorizontalAlignment="Center" Name="windowsFormsHost1" VerticalAlignment="Center"  />-->
        <Image Name="CameraScreen" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Height="300"></Image>
    </Grid>
</UserControl>
